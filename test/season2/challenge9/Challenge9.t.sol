pragma solidity ^0.8.13;

import "@openzeppelin/contracts/utils/cryptography/MessageHashUtils.sol";
import {Test, console} from "forge-std/Test.sol";
import {BaseTest} from "../BaseTest.sol";

contract Challenge9Test is BaseTest {
    using MessageHashUtils for bytes32;

    address challenge9;

    // Default Hardhat Mnemonic used in the deploy script
    string constant MNEMONIC = "test test test test test test test test test test test junk";
    // Path used in deploy script: m/44'/60'/0'/0/12
    uint256 signerPrivateKey;
    address signerAddress;

    function setUp() public {
        setUpChallenges();

        vm.startPrank(ADMIN);

        // Bytecode taken from packages/hardhat/deploy/01_deploy_ctf_season2_contracts.ts
        string memory bytecodeBase =
            "";

        // Append the constructor argument (nftFlags address)
        bytes memory bytecode =
            abi.encodePacked(vm.parseBytes(bytecodeBase), abi.encodePacked(uint256(uint160(address(nftFlags)))));

        // Deploy the contract using assembly
        address deployedAddress;
        assembly {
            deployedAddress := create(0, add(bytecode, 0x20), mload(bytecode))
        }
        challenge9 = deployedAddress;
        nftFlags.addAllowedMinter(challenge9);

        // Derive the signer account used in the deploy script (index 12)
        signerPrivateKey = vm.deriveKey(MNEMONIC, 12);
        signerAddress = vm.addr(signerPrivateKey);

        // Initialize contract with the signer address (Selector 0x983b2d56 from deploy script)
        (bool success,) = challenge9.call(abi.encodeWithSelector(0x983b2d56, signerAddress));
        require(success, "Init failed");

        vm.stopPrank();
    }

    function test_challenge9() public {
        vm.startPrank(PLAYER, PLAYER);

        // Step 1: Reconstruct the message found in the bytecode error strings
        // "BG CTF Challenge 9"
        bytes32 message = keccak256(abi.encode("BG CTF Challenge 9", PLAYER));
        bytes32 ethSignedMessageHash = message.toEthSignedMessageHash();

        // Step 2: Sign the message with the leaked private key
        (uint8 v, bytes32 r, bytes32 s) = vm.sign(signerPrivateKey, ethSignedMessageHash);
        bytes memory signature = abi.encodePacked(r, s, v);

        // Step 3: Call the mint function (Selector 0xf2fde38b found in bytecode/hash check)
        (bool success,) = challenge9.call(abi.encodeWithSelector(0x23cfec7e, signerAddress, signature));
        require(success, "Mint failed");

        // DONE: You should have obtained the flag for challenge #9
        assertTrue(nftFlags.hasMinted(PLAYER, 9));
    }
}
